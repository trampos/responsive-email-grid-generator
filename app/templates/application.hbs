<!-- View Section -->
<section class="main-section">
    <div class="container">

        <h2 id="dropdowns">Build your grid</h2>
        <p>Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit</p>

        <div class="row">
            <div class="col-xs-4">
                <label for="input-@padding-base-vertical">@max-width</label>
                {{input value=maxWidth class="form-control"}}
                <p class="help-block">The maximum width for your grid</p>
            </div>
            <div class="col-xs-4">
                <label for="input-@padding-base-horizontal">@mobile-breakpoint</label>
                {{input value=breakpoint class="form-control"}}
                <p class="help-block">breakpoint for mobiles, just change this value if you know what you are doing</p>
            </div>
            <div class="col-xs-4">
                <label for="input-@padding-large-vertical">@gap-size: {{gap}}</label>
                {{input type="range" value=gap min=0 max=100 step=2}}
                <p class="help-block">The space between rows and columns</p>
            </div>
        </div>
    </div>
</section>

<section class="stage-section">

    <div id="main">
        {{component "main-grid" maxWidth=maxWidth rows=rows gap=gap}}
    </div>

    {{component "grid-tools" target=selectedItem delete="removeRow"}}
		
    <button {{action "addRow"}} class="btn btn-default add-row-button">ADD ROWS</button>
    <div class="media-query-opt">
        MEDIA QUERY SUPPORT <button {{action "toggleMediaQuerySupport"}} class="btn">{{mediaQuerySupport}}</button>
    </div>
</section>

